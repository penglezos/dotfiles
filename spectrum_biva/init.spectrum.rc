# SPECTRUM KERNEL MANAGER

# Initialization
on property:sys.boot_completed=1
  # Set default profile on first boot
  exec u:r:init:s0 root root -- /system/etc/init/init.spectrum.sh
  exec u:r:su:s0 root root -- /system/etc/init/init.spectrum.sh
  # Enable Spectrum support
  setprop spectrum.support 1
   # Add kernel name
   setprop persist.spectrum.kernel Englezos ⚡️ Biva Edition

# Balance (default profile)
on property:persist.spectrum.profile=0
	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor interactive
	write /sys/devices/system/cpu/cpu2/online 1
	write /sys/devices/system/cpu/cpu3/online 1
	write /sys/devices/system/cpu/cpu6/online 1
	write /sys/devices/system/cpu/cpu7/online 1
   	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1689000
	write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 1689000
	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 652800
	write /sys/devices/system/cpu/cpu4/cpufreq/scaling_min_freq 652800

# Performance
on property:persist.spectrum.profile=1
	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor darkness
	write /sys/devices/system/cpu/cpu2/online 1
	write /sys/devices/system/cpu/cpu3/online 1
	write /sys/devices/system/cpu/cpu6/online 1
	write /sys/devices/system/cpu/cpu7/online 1
	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 2016000
	write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 2016000
	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 1036800
	write /sys/devices/system/cpu/cpu4/cpufreq/scaling_min_freq 1036800

# Battery
on property:persist.spectrum.profile=2
	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor zzmoove
	write /sys/devices/system/cpu/cpufreq/zzmoove/profile_number 2
	write /sys/devices/system/cpu/cpu2/online 0
	write /sys/devices/system/cpu/cpu3/online 0
	write /sys/devices/system/cpu/cpu6/online 0
	write /sys/devices/system/cpu/cpu7/online 0
	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1401000
	write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 1401000
	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 652800
	write /sys/devices/system/cpu/cpu4/cpufreq/scaling_min_freq 652800